<Window x:Class="TechnicalAssignment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechnicalAssignment"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Canvas Name="cnvImage" Height="300" Width="400" MouseLeftButtonDown="AddRectangle" MouseRightButtonDown="RemoveRectangle">
                <Image Name="imgPhoto" Height="300" Width="400"
                Stretch="Fill"  Focusable="True"
                />
            </Canvas>
            <Button Height="23" HorizontalAlignment="Center" Margin="12,0,0,34" Name="btnOpen" VerticalAlignment="Bottom" Width="75" Click="btnOpen_Click">Open</Button>
        </StackPanel>

    </Grid>
</Window>
